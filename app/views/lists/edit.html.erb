<h1>Edit Item</h1>

<% if @lists.errors.any? %>
<h3>Please fix the following errors:</h3>
<ul>
  <% @lists.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<form action="/lists/<%= @lists.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="item">Item</label>
  <input id="item" name="item" type="text" value="<%= @lists.item %>">
  <label for="location">Location</label>
  <input id="location" name="location" type="text" value="<%= @lists.location %>">
  <label for="when">When</label>
  <input id="when" name="when" type="text" value="<%= @lists.when %>">
  <button>Update List</button>
</form>
